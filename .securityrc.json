{
  "version": "1.0",
  "tools": {
    "truffleHog": {
      "enabled": true,
      "exclude": ["**/node_modules/**", "**/dist/**"]
    },
    "semgrep": {
      "enabled": false,
      "rules": []
    },
    "customScanners": {
      "enabled": true,
      "modules": []
    }
  },
  "scan": {
    "target": ".",
    "exclude": [
      "**/node_modules/**",
      "**/dist/**",
      "**/build/**",
      "**/.git/**",
      "**/coverage/**",
      "**/reports/**",
      "**/pnpm-lock.yaml"
    ],
    "includeTests": false,
    "maxFileSize": 10485760,
    "maxDepth": 50,
    "followSymlinks": false
  },
  "falsePositives": {
    "excludeTestFiles": true,
    "excludeStorybook": true,
    "patterns": [
      {
        "file": "**/*.md",
        "pattern": ".*",
        "reason": "Documentation files with example code"
      },
      {
        "file": "**/QUICK_START.md",
        "pattern": ".*",
        "reason": "Quick start guide with example credentials"
      }
    ]
  },
  "output": {
    "formats": ["terminal", "json"],
    "dir": "./reports",
    "verbose": false,
    "quiet": false
  },
  "severity": {
    "threshold": "LOW",
    "failOn": ["CRITICAL", "HIGH"]
  },
  "performance": {
    "parallelWorkers": 4,
    "cacheEnabled": true,
    "incrementalScan": false
  }
}
