{
  "version": "1.0",
  "tools": {
    "truffleHog": {
      "enabled": true,
      "exclude": ["**/node_modules/**", "**/dist/**"]
    },
    "semgrep": {
      "enabled": false,
      "rules": []
    },
    "customScanners": {
      "enabled": true,
      "modules": []
    }
  },
  "scan": {
    "target": ".",
    "exclude": [
      "**/node_modules/**",
      "**/dist/**",
      "**/build/**",
      "**/.git/**",
      "**/coverage/**",
      "**/reports/**",
      "**/pnpm-lock.yaml"
    ],
    "includeTests": false,
    "maxFileSize": 10485760,
    "maxDepth": 50,
    "followSymlinks": false
  },
  "falsePositives": {
    "excludeTestFiles": true,
    "excludeStorybook": true,
    "excludeDocumentation": true,
    "excludeScannerRules": true,
    "patterns": [
      {
        "file": "**/*.md",
        "pattern": ".*",
        "reason": "Documentation files with example code"
      },
      {
        "file": "**/rules/**/*.yml",
        "pattern": ".*",
        "reason": "Security scanner rule definitions"
      },
      {
        "file": "**/commands/**/*.ts",
        "pattern": "path\\.(join|resolve)",
        "reason": "CLI tool legitimate path operations"
      },
      {
        "file": "**/reports/**",
        "pattern": ".*",
        "reason": "Scan output files contain test data"
      }
    ]
  },
  "output": {
    "formats": ["terminal", "json"],
    "dir": "./reports",
    "verbose": false,
    "quiet": false
  },
  "severity": {
    "threshold": "LOW",
    "failOn": ["CRITICAL", "HIGH"]
  },
  "policy": {
    "enforceSecurityBaseline": true,
    "allowedLicenses": ["MIT", "Apache-2.0", "BSD-3-Clause", "ISC"],
    "blockedPackages": [],
    "maxCriticalFindings": 0,
    "maxHighFindings": 5,
    "requireSecurityReview": true
  },
  "performance": {
    "parallelWorkers": 4,
    "cacheEnabled": true,
    "incrementalScan": false
  }
}
